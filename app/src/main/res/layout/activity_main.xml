<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Chronometer
        android:id="@+id/kronometre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="60dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/imgStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgStart"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kronometre"
        app:srcCompat="@drawable/start" />

    <ImageView
        android:id="@+id/imgReset"
        android:layout_width="130dp"
        android:layout_height="146dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgStart"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imgStart"
        app:layout_constraintTop_toBottomOf="@+id/imgStart"
        app:srcCompat="@drawable/reset" />

    <Button
        android:textColor="@color/white"

        android:id="@+id/buttonStart"
        android:layout_width="177dp"
        android:layout_height="167dp"
        android:background="@drawable/buttonbackground"
        android:text="Başlat"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgStart"
        app:layout_constraintEnd_toEndOf="@+id/imgStart"
        app:layout_constraintStart_toStartOf="@+id/imgStart"
        app:layout_constraintTop_toTopOf="@+id/imgStart" />

    <Button
        android:id="@+id/buttonPause"
        android:layout_width="177dp"
        android:layout_height="166dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/buttonbackground"
        android:text="Durdur"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imgStart"
        app:layout_constraintEnd_toEndOf="@+id/imgStart"
        app:layout_constraintTop_toTopOf="@+id/imgStart" />

    <Button

        android:textColor="@color/white"
        android:id="@+id/buttonReset"
        android:layout_width="89dp"
        android:layout_height="82dp"
        android:background="@drawable/buttonbackground"
        android:text="Sıfırla"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgReset"
        app:layout_constraintEnd_toEndOf="@+id/imgReset"
        app:layout_constraintStart_toStartOf="@+id/imgReset"
        app:layout_constraintTop_toTopOf="@+id/imgReset" />


</androidx.constraintlayout.widget.ConstraintLayout>